@model ProjetoAtividade.Models.ViewModels.RequestDTO.PostPizzasDTO

@{
    ViewData["Title"] = "Atualizar";
}

<h1>Atualizar Sabor: @Model.Nome</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Atualizar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <img class="img-thumbnail" src="@Model.FotoUrl" />
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotoUrl" class="control-label"></label>
                <input asp-for="FotoUrl" class="form-control" />
                <span asp-validation-for="FotoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SaboresId" class="control-label"></label>
                    <select asp-for="SaboresId" class="form-control" asp-items="ViewBag.Sabores" multiple></select>
                    <span asp-validation-for="SaboresId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TamanhoId" class="control-label"></label>
                    <select asp-for="TamanhoId" class="form-control" asp-items="ViewBag.Tamanhos"></select>
                    <span asp-validation-for="TamanhoId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Lista de Sabores</a>
</div>