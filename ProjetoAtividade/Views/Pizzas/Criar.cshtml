@model ProjetoAtividade.Models.ViewModels.RequestDTO.PostPizzasDTO
 
@{
    ViewData["Title"] = "Cadastrar Pizza";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Nova Pizza</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Criar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Nome" class="control-label"></label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DataInclusao" class="control-label"></label>
                                <input asp-for="DataInclusao" type="date" class="form-control" />
                                <span asp-validation-for="DataInclusao" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DataRemocao" class="control-label"></label>
                                <input asp-for="DataRemocao" type="date" class="form-control" />
                                <span asp-validation-for="DataRemocao" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Preco" class="control-label"></label>
                                <input asp-for="Preco" type="number" class="form-control" />
                                <span asp-validation-for="Preco" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FotoUrl" class="control-label"></label>
                                <input asp-for="FotoUrl" class="form-control" />
                                <span asp-validation-for="FotoUrl" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SaborId" class="control-label"></label>
                                <input asp-for="SaborId" class="form-control" asp-items="ViewBag.Sabores" multiple/>
                                <span asp-validation-for="SaborId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TamanhoId" class="control-label"></label>
                                <input asp-for="TamanhoId" class="form-control"  asp-items="ViewBag.Tamanhos"/>
                                <span asp-validation-for="TamanhoId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="FotoUrlPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Cadastrar" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Mostrar Todos</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
        $("#FotoUrl").on("change", function () {
            var output = document.getElementById("FotoUrlPreview");
            output.src = $(this).val();
        })
    </script>
}