@model Pizza

@{
    ViewData["Title"] = "Deletar Filme";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Deletar Pizza @Model.Nome</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">                
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FotoUrl" class="control-label"></label>
                        <input asp-for="FotoUrl" class="form-control" />
                    </div>

                    <div class="form-group">
                        <form asp-action="Deletar">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="ConfirmarDeletar" class="btn btn-outline-danger float-right" />
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Listar Todos</a>
                    </div>
                    
            </div>
        </div>
    </div>
</div>