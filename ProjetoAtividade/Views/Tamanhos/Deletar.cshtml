@model Pizza

@{
    ViewData["Title"] = "Deletar Sabor";
}

<div class="row">
    <div clas="col-md-8 offset-2">
        <p>
            <h1>Deletar sabor: @Model.Nome</h1>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group">
                    <img src="@Model.FotoUrl" class="img-thumbnail" alt="@Model.Nome" />
                </div>
                <div class="form-group">
                    <h3>@Model.Nome</h3>
                </div>
                <div class="form-group">
                    <form asp-action="Deletar">
                        <input type="hidden" asp-for="TamanhoId" />
                        <input type="submit" value="Confirmar" class="btn btn-outline-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Listar Todos</a>
                </div>
            </div>
        </div>
    </div>
</div> 